#!/usr/bin/bash

dir=/home/joecool/samba/Torrents/
target=/media/Daten/Torrents/Raspberry/

inotifywait -m ~/samba/SABnzbd/ -e create |
    while read path action file; do
        #echo "The file '$path$file' appeared in directory '$path' via '$action'"
        cp -r "$path$file" /media/Daten/Torrents/Raspberry/
    done
