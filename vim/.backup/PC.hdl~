/**
 * 16-bit counter with load and reset controls.
 *
 * If reset(t-1) then out(t) = 0
 *    else if load(t-1) then out(t) = in(t-1)
 *         else if inc(t-1) then out(t) = out(t-1) + 1 (integer addition)
 *              else out(t) = out(t-1)
 */

CHIP PC {
    IN in[16],load,inc,reset;
    OUT out[16];

    PARTS:

    //Load
    Mux16(a=iout,b=rout,sel=load,out=lout);

    // Reset
    Not16(in=lout,out=notx);
    And16(a=lout,b=notx,out=zeroin);
    Mux16(a=lout,b=zeroin,sel=reset,out=rout);

    DFF16(in=rout,out=w1); 
    Foo16(in=w1,x=out,y=b);

    //Inc
    Inc16(in=b,out=ii);
    Mux16(a=b,b=ii,sel=inc,out=iout);
}

