# Menus
        OnDesktop Mouse3 :RootMenu
        Control S :RootMenu
        Mod1 M :WindowMenu
        Mod1 N :HideMenus
        OnToolbar Mouse3 :HideMenus 
#Toolbar
        # scroll on the toolbar to change current window
        Control K :PrevWindow {static groups} (iconhidden=no) (workspace=[current])
        Control J :NextWindow {static groups} (iconhidden=no) (workspace=[current])

        # alt-tab
        Mod1 Tab :NextWindow {groups} (workspace=[current])
        Mod1 Shift Tab :PrevWindow {groups} (workspace=[current])
#Tabbing and Grouping
        # control-click a window's titlebar and drag to attach windows
        OnTitlebar Control Mouse1 :StartTabbing

        # cycle through tabs in the current window
        Mod4 Tab :NextTab
        Mod4 Shift Tab :PrevTab

        # go to a specific tab in the current window
        Mod4 1 :Tab 1
        Mod4 2 :Tab 2
        Mod4 3 :Tab 3
        Mod4 4 :Tab 4
        Mod4 5 :Tab 5
        Mod4 6 :Tab 6
        Mod4 7 :Tab 7
        Mod4 8 :Tab 8
        Mod4 9 :Tab 9
# workspace
        #show desktop
        mod4 d :showdesktop
        ondesktop mouse1 :showdesktop

        # change to previous/next workspace
        mod4 c :prevworkspace
        mod4 v :nextworkspace

        # send the current window to previous/next workspace
        mod4 left :sendtoprevworkspace
        mod4 right :sendtonextworkspace

        # send the current window and follow it to previous/next workspace
        control mod4 left :taketoprevworkspace
        control mod4 right :taketonextworkspace

        # change to a specific workspace
        mod4 f1 :workspace 1
        mod4 f2 :workspace 2

        # send the current window to a specific workspace
        control f1 :sendtoworkspace 1
        control f2 :sendtoworkspace 2

        # send the current window and change to a specific workspace
        control mod4 f1 :taketoworkspace 1
        control mod4 f2 :taketoworkspace 2

        # scroll on the desktop to change workspaces
        #ondesktop mouse6 :prevworkspace
        #ondesktop mouse5 :nextworkspace
# Window Control
        # alt + left/right click to move/resize a window
        OnWindow Mod1 Mouse3 :MacroCmd {Raise} {Focus} {StartResizing NearestCorner}
        OnLeftGrip Move1 :StartResizing bottomleft
        OnRightGrip Move1 :StartResizing bottomright

        # double click on the titlebar to shade
        OnTitlebar Double Mouse1 :Shade

        # left click on the titlebar to move the window
        OnTitlebar Mouse1 :MacroCmd {Raise} {Focus} {ActivateTab}
        OnTitlebar Move1  :StartMoving
# Window Size
        Mod1 F4 :Close
        Mod1 F5 :Kill
        Mod1 F9 :Minimize
        Mod1 F10 :Maximize
        Mod1 F11 :Fullscreen

        Control M :MacroCmd {MoveTo -1 0} {ResizeTo 1680 1029}
        Control Left :MacroCmd {MoveTo 0 0} {ResizeTo 838 1029}
        Control Right :MacroCmd {MoveTo 839 0} {ResizeTo 839 1029}
        Control Up :MacroCmd {MoveTo -1 0} {ResizeTo 1680 515}
        Control Down :MacroCmd {MoveTo -1 515} {ResizeTo 1680 514}
        Control 1 :MacroCmd {MoveTo 0 0} {ResizeTo 838 515}
        Control 2 :MacroCmd {MoveTo 839 0} {ResizeTo 839 515}
        Control 3 :MacroCmd {MoveTo 0 515} {ResizeTo 838 514}
        Control 4 :MacroCmd {MoveTo 839 515} {ResizeTo 839 514}
        Control 5 :MacroCmd {MoveTo 240 0} {ResizeTo 1200 1029}
# Open Programs
        #Mod1 1 :Exec xfce4-terminal -e tmux
        Mod1 1 :Exec urxvt
        Mod1 2 :Exec urxvt -e vifm
        Mod1 3 :Exec gvim
        Mod1 4 :Exec sh ~/scripts/open_dwb_with_tor.sh
        Mod1 5 :Exec urxvt -e ncmpcpp
        #Mod1 5 :Exec sonata
        Mod1 6 :Exec thunar
        Mod1 7 :Exec usewithtor firefox
        Control Mod1 7 :Exec usewithtor firefox
        Control Mod1 y :Exec setxkbmap de -variant nodeadkeys
        Control Mod1 x :Exec setxkbmap lv && xmodmap ~/Downloads/neo_de.xmodmap && xset -r 51

#Fluxbox Commands
        # exit fluxbox
        Control Mod1 Delete :Exit
