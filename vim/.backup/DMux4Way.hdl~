/**
 * 4-way demultiplexor.  
 * {a,b,c,d} = {in,0,0,0} if sel == 00
 *             {0,in,0,0} if sel == 01
 *             {0,0,in,0} if sel == 10
 *             {0,0,0,in} if sel == 11
 */


CHIP DMux4Way {


    IN in, sel[2];

    OUT a, b, c, d;

    PARTS:
    Not(in=sel[0],out=not1);
    Not(in=sel[1],out=not2);

    And(a=not1,b=not2,out=siga);
    And(a=sel[0],b=not2,out=sigb);
    And(a=not1,b=sel[1],out=sigc);
    And(a=sel[0],b=sel[1],out=sigd);

    And(a=in,b=siga,out=a);
    And(a=in,b=sigb,out=b);
    And(a=in,b=sigc,out=c);
    And(a=in,b=sigd,out=d);

}
