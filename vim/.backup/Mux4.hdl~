/**
 * 4-way 16-bit multiplexor.  
 * out = a if sel == 00
 *       b if sel == 01
 *       c if sel == 10
 *       d if sel == 11
 */


CHIP Mux4 {


    IN a, b, c, d, sel[2];

    OUT out;

    PARTS:
    Not(in=sel[0],out=notsel]);
    Not(in=sel[1],out=notsel1]);

    And(a=notsel,b=notsel1,out=siga);
    And(a=sel[0],b=notsel1,out=sigb);
    And(a=notsel,b=sel[1],out=sigc);
    And(a=sel[0],b=sel[1],out=sigd);

    And(a=a,b=siga,out=w1);
    And(a=b,b=sigb,out=w2);
    And(a=c,b=sigc,out=w3);
    And(a=d,b=sigd,out=w4);


    Or(a=w1,b=w2,out=out1);
    Or(a=out1,b=w3,out=out2);
    Or(a=out2,b=w4,out=out);
}
